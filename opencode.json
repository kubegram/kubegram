{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "opencode/big-pickle",
      "description": "Planning agent using Big Pickle for analysis and strategy",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "permission": {
        "edit": "ask",
        "bash": "ask"
      }
    },
    "build": {
      "mode": "primary", 
      "model": "openai/gpt-5.1-codex",
      "description": "Building agent using OpenAI Codex for implementation",
      "temperature": 0.3,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },
  "default_agent": "plan"
}