{
  "name": "kubegram",
  "private": true,
  "workspaces": [
    "common-ts",
    "kuberag",
    "kubegram-server",
    "kubegram-ui"
  ],
  "scripts": {
    "build:all": "npm --workspaces run build --if-present",
    "test:all": "npm --workspaces run test --if-present",
    "lint:all": "npm --workspaces run lint --if-present",
    "typecheck:all": "npm --workspaces run typecheck --if-present",
    "check:all": "npm run typecheck:all && npm run lint:all && npm run test:all",
    "build:common-ts": "npm run build --workspace @kubegram/common-ts",
    "test:common-ts": "npm run test:ci-no-coverage --workspace @kubegram/common-ts",
    "lint:common-ts": "npm run lint --workspace @kubegram/common-ts",
    "typecheck:common-ts": "npm run type-check --workspace @kubegram/common-ts",
    "codegen:common-ts": "npm run codegen --workspace @kubegram/common-ts",
    "check:common-ts": "npm run check-all --workspace @kubegram/common-ts",
    "dev:kuberag": "npm run dev --workspace kuberag",
    "build:kuberag": "npm run build --workspace kuberag",
    "test:kuberag": "npm run test --workspace kuberag",
    "lint:kuberag": "npm run lint --workspace kuberag",
    "typecheck:kuberag": "npm run typecheck --workspace kuberag",
    "dev:server": "npm run dev --workspace kubegram-server-v2",
    "build:server": "npm run build --workspace kubegram-server-v2 --if-present",
    "test:server": "npm run test --workspace kubegram-server-v2 --if-present",
    "lint:server": "npm run lint --workspace kubegram-server-v2 --if-present",
    "typecheck:server": "npm run typecheck --workspace kubegram-server-v2 --if-present",
    "dev:ui": "npm run dev --workspace kubegram-ui-v2",
    "build:ui": "npm run build --workspace kubegram-ui-v2",
    "test:ui": "npm run test --workspace kubegram-ui-v2 --if-present",
    "lint:ui": "npm run lint --workspace kubegram-ui-v2",
    "typecheck:ui": "npm run typecheck --workspace kubegram-ui-v2 --if-present"
  }
}