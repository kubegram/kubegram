{
  "name": "kuberag",
  "version": "1.0.0",
  "description": "Kubernetes infrastructure graph management with LLM-powered manifest generation",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:debug": "bun --inspect=0.0.0.0:9229/kuberag-debug --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dc:up": "docker compose up -d",
    "dc:down": "docker compose down",
    "dc:rebuild": "docker compose build --no-cache",
    "dc:restart": "docker compose restart",
"dc:logs:app": "docker compose logs -f app",
    "dc:logs:redis": "docker compose logs -f redis",
    "dc:logs:dgraph": "docker compose logs -f dgraph",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx eslint src --ext .ts",
    "lint:fix": "bunx eslint src --ext .ts --fix",
    "typecheck": "bunx tsc --noEmit",
    "load-schema": "bun scripts/load-schema.ts"
  },
  "keywords": [
    "kubernetes",
    "llm",
    "graphql",
    "infrastructure",
    "manifest-generation",
    "dgraph",
    "redis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.6.7",
    "graphql-yoga": "^5.9.1",
    "@pothos/core": "^4.3.1",
    "ioredis": "^5.4.2",
    "ai": "^3.4.32",
    "@ai-sdk/anthropic": "^0.0.45",
    "@ai-sdk/openai": "^0.0.49",
    "@ai-sdk/google": "^0.0.50",
    "zod": "^3.23.8",
    "js-yaml": "^4.1.0",
    "pino": "^9.5.0",
    "@xenova/transformers": "^2.17.2",
    "uuid": "^10.0.0",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "@opentelemetry/api": "^1.9.0",
    "zod-to-json-schema": "^3.23.3",
    "@openauthjs/openauth": "^0.4.3",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
